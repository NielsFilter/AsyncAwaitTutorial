<Window x:Class="AsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwait"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Name="tbClickCounter" FontSize="60">0</TextBlock>
            <Button Height="50" Click="Button_Click">Click Me</Button>
            <Button Height="50" Click="Load_Click">Load stuff</Button>
            <TextBlock Name="tbResult" FontSize="50">click to load...</TextBlock>
        </StackPanel>
    </Grid>
</Window>
